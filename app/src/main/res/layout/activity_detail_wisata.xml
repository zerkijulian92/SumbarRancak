<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_item_photo"
                    tools:src="@android:color/darker_gray"
                    android:scaleType="centerCrop"
                    android:layout_width="150dp"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/tv_item_name"
                    android:text="Bukik Chinangkiek"
                    style="@style/TextH1"
                    android:layout_toRightOf="@id/img_item_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tv_lokasi_wisata"
                    android:text="Lokasi Wisata:"
                    style="@style/TextH2"
                    android:layout_toRightOf="@id/img_item_photo"
                    android:layout_below="@id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_alamat_lokasi"
                    android:text="Singkarak, X Koto Singkarak, Solok, Sumatera Barat 27356"
                    style="@style/TextH3"
                    android:layout_toRightOf="@id/img_item_photo"
                    android:layout_below="@id/tv_lokasi_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>