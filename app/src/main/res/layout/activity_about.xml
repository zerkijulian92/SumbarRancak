<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="@drawable/zerkiedit"
        android:layout_width="140dp"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/name"
        android:text="Zerki Yulyandri"
        android:textColor="@color/colorHijauLight"
        android:fontFamily="@font/mmedium"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email"
        android:text="zerkijuliandri92@gmail.com"
        android:textColor="@color/colorGray2"
        android:textSize="15sp"
        android:fontFamily="@font/mregular"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alamat"
        android:text="Solok, Sumatera Barat"
        android:textSize="14sp"
        android:textColor="@color/colorGray2"
        android:fontFamily="@font/mlight"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_back"
        android:text="Logout"
        android:textSize="15sp"
        android:fontFamily="@font/mmedium"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorHijauLight"
        android:padding="18dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>